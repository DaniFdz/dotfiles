# Functions
unalias gpu
function gpu() {
    git push -u origin $(git branch | awk '/^\* / { print $2 }')
}

unalias gcb
function gcb() {
    git checkout -b $USER/$1
}

function openpr() {
    local BRANCH=$(git rev-parse --abbrev-ref HEAD)
    open https://github.com/DataDog/web-ui/compare/preprod...$BRANCH
}
